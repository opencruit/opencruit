{
  "name": "opencruit",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "worker": "pnpm --filter @opencruit/worker worker"
  },
  "devDependencies": {
    "@opencruit/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-svelte": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  }
}
